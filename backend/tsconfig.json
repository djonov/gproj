{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "build",
    "noImplicitAny": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "lib": ["es2017"],
    "types": ["node"],
    "sourceMap": true,
    "baseUrl": "./src",
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules", "_www"]
}
